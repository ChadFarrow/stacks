{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "moduleDetection": "force",
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "outDir": "./dist/types",
    "lib": [
      "esnext"
    ],
    "types": [
      "vite/client",
      // "vue/ref-macros",
      "vite-plugin-pages/client",
      "vite-plugin-vue-layouts/client",
      "vite-plugin-pwa/client",
      "bun-types"
    ],
    "paths": {
      "@stacksjs/*": ["./core/*/src"],
      "stacks/*": ["./core/*/src"],
      "buddy": ["./core/buddy/src/index.ts"],
      "buddy/*": ["./core/buddy/src/*"],
      "eslint-plugin-stacks": ["./eslint-plugin-stacksjs/src/index.ts"],
      "eslint-plugin-stacksjs": ["./eslint-plugin-stacksjs/src/index.ts"],
      // "~/app/*": ["../app/*"],
      // "~/config/*": ["../config/*"],
      "~/components/*": ["../resources/components/*"],
      "~/functions/*": ["../resources/functions/*"],
      // "~/lang/*": ["../lang/*"],
      "~/models/*": ["../app/models/*"],
      // "~/resources/*": ["../resources/*"],
      "~/views/*": ["../resources/views/*"],
      "~/*": ["../*"]
    }
  },
  "vueCompilerOptions": {
    "plugins": [
      "@vue-macros/volar/define-models",
      "@vue-macros/volar/define-slots"
    ]
  },
  "include": [
    "./playwright.config.ts",
    "../*.ts",
    "../*.d.ts",
    "../**/*.ts",
    "../**/*.d.ts",
    "../storage/framework/database/**/*",
    "../storage/framework/types/**/*",
    "../storage/framework/types/*",
    "./views/**/*",
    "./stacks/**/*",
    "./scripts/**/*",
    "./scripts/*",
    "./libs/**/*",
    "./core/*/src",
    "./core/*/tests/*",
    "./core/*/tests/**/*",
    "./core/build/**/*",
    "./core/cloud/*",
    "./core/utils/scripts/*",
    "./core/**/build.ts",
    "./core/**/build.config.ts",
    "./core/docs/.vitepress/*",
    "../app/*",
    "../app/**/*",
    "../docs/*",
    "../docs/**/*",
    "../lang/*",
    "../lang/**/*",
    "../resources/*",
    "../resources/**/*",
    "../routes/*",
    "../routes/**/*",
    "../storage/*",
    "../storage/**/*",
    "../types/*",
    "../types/**/*",
    "../tests/*",
    "../tests/**/*"
  ],
  "exclude": [
    "../**/cdk.out",
    "./libs/examples",
    "../commitlint.config.cjs",
    "../**/dist",
    "../**/fixtures",
    "./**/eslint-plugin-stacksjs",
    "./node_modules",
    "./**/node_modules",
    "../node_modules",
    "../**/node_modules"
  ]
}
