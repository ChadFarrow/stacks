{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "useDefineForClassFields": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "outDir": "./dist/types",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "types": [
      "vitest",
      "vite/client",
      "vue/ref-macros",
      "vite-plugin-pages/client",
      "vite-plugin-vue-component-preview/client",
      "vite-plugin-vue-layouts/client",
      "vite-plugin-pwa/client",
      "./core/types",
    ]
  },
  "include": [
    "./**.d.ts",
    "./**/*",
    "../components/**/*",
    "../functions/**/*",
    "../pages/**/*"
  ],
  "exclude": [
    "./examples/*",
    "./nitro.config.ts",
    "./vitest.config.ts",
    "../.github/commitlint.config.cjs",
    "../**/README.md",
    "../**/dist/**",
    "../**/node_modules/**"
  ]
}
