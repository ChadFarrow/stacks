{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "useDefineForClassFields": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "types": [
      "vitest",
      "vite/client",
      "vue/ref-macros"
    ],
    "paths": {
      "stacks": [
        ".stacks/src/index.ts"
      ],
      "stacks/*": [
        "./.stacks/src/*"
      ],
      "components/*": [
        "./components/*"
      ],
      "functions/*": [
        "./functions/*"
      ],
      "~/*": [
        "./*"
      ]
    },
    "lib": [
      "ESNext",
      "DOM"
    ]
  },
  "include": [
    "./.stacks/shims.d.ts",
    "./.stacks/auto-imports.d.ts",
    "./.stacks/components.d.ts",
    "./.stacks/**/*",
    "./functions/**/*",
    "./pages/**/*",
    "./components/**/*"
  ],
  "exclude": [
    "./.stacks/types/*",
    "./.stacks/scripts/*",
    ".stacks/src/playground/*",
    "./.stacks/examples/*",
    "./.stacks/bin/*",
    "./.stacks/README.md",
    "./.stacks/nitro.config.ts",
    "./.stacks/vitest.config.ts",
    "**/dist/**",
    "**/node_modules/**",
    "apps/site/**",
    "commitlint.config.cjs"
  ]
}
