{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "useDefineForClassFields": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "types": [
      "node",
      "vitest",
      "vite/client"
    ],
    "paths": {
      "stacks": [
        ".stacks/src/index.ts"
      ],
      "stacks/*": [
        "./.stacks/src/*"
      ],
      "builds": [
        "./.stacks/src/builds/index.ts"
      ],
      "components": [
        ".stacks/src/components/index.ts"
      ],
      "config": [
        "./.stacks/src/config.ts"
      ],
      "functions": [
        "./.stacks/src/functions/index.ts"
      ],
      "~/*": [
        "./*"
      ],
    },
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "exclude": [
    "**/dist/**",
    "**/node_modules/**",
    "tests/cypress/**",
    "apps/site/**",
    "commitlint.config.cjs"
  ],
  "extends": "./.stacks/.nitro/types/tsconfig.json"
}
