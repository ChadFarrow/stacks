{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "target": "es2017",
    "module": "esnext",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "types": [
      "node",
      "vitest",
      "vite/client"
    ],
    "typeRoots": [
      "packages/core/types",
      "node_modules/@types"
    ],
    "paths": {
      "@ow3/hello-world-vue": [
        "./packages/vue/src/index.ts"
      ],
      "@ow3/hello-world-composable": [
        "./packages/composables/src/index.ts"
      ],
      "@ow3/hello-world-elements": [
        "./packages/web-components/src/index.ts"
      ],
      "@ow3/stacks-core": [
        "./packages/core/src/index.ts"
      ],
    }
  },
  "exclude": [
    "**/dist/**",
    "**/node_modules/**",
    "**/tests/**",
  ],
  "include": [
    "packages/**/*.ts",
    "packages/**/*.d.ts",
    "packages/**/*.vue",
  ]
  // "exclude": [
  //   "**/dist/**",
  //   "**/node_modules/**",
  //   "**/playground/**",
  //   "**/examples/**",
  //   "**/tests/**",
  // ],
  // "include": [
  //   "./apps/*",
  //   "./config/*",
  //   "./examples/*",
  //   "./packages/**/*",
  //   "./scripts/*"
  // ],
}