{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "useDefineForClassFields": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "types": [
      "vitest",
      "vite/client",
      "vue/ref-macros",
    ],
    "paths": {
      "stacks": [
        ".stacks/src/index.ts"
      ],
      "stacks/*": [
        "./.stacks/src/*"
      ],
      "builds": [
        "./.stacks/src/builds/index.ts"
      ],
      "components/*": [
        "./components/*"
      ],
      "config": [
        "./.stacks/src/config.ts"
      ],
      "functions/*": [
        "./functions/*"
      ],
      "~/*": [
        "./*"
      ],
    },
    "lib": [
      "ESNext",
      "DOM"
    ]
  },
  "exclude": [
    "**/dist/**",
    "**/node_modules/**",
    "tests/cypress/**",
    "apps/site/**",
    "commitlint.config.cjs"
  ],
}
