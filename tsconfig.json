{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "types": [
      "node",
      "vitest",
      "vite/client"
    ],
    "paths": {
      "stacks": [
        "./.stacks/index.ts"
      ],
      "~/functions": [
        "./functions/index.ts"
      ],
      "stacks/*": [
        "./.stacks/src/*"
      ],
      "builds": [
        "./.stacks/src/builds/index.ts"
      ],
      "components": [
        "./components/index.ts"
      ],
      "config": [
        "./config/index.ts"
      ],
      "functions": [
        "./functions/index.ts"
      ]
    },
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "exclude": [
    "**/dist/**",
    "**/node_modules/**",
    "tests/cypress/**",
    "apps/site/**",
    "commitlint.config.cjs"
  ]
}
