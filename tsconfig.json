{
  "compilerOptions": {
    "composite": true,
    "target": "es2017",
    "module": "esnext",
    "lib": [
      "esnext"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "types": [
      "node",
      "vitest",
      "vite/client"
    ],
    "paths": {
      "@ow3/hello-world-vue": [
        "./packages/vue/src/index.ts"
      ],
      "@ow3/hello-world-composable": [
        "./packages/composables/src/index.ts"
      ],
      "@ow3/hello-world-elements": [
        "./packages/web-components/src/index.ts"
      ]
    }
  },
  "exclude": [
    "**/dist/**",
    "**/node_modules/**",
    "**/playground/**"
  ]
}
