{
  "name": "@hello-world/monorepo",
  "version": "0.11.0",
  "packageManager": "pnpm@7.1.5",
  "description": "The easy way to start your stack monorepo.",
  "workspaces": [
    "packages/*",
    "playground"
  ],
  "keywords": [
    "monorepo",
    "component",
    "library",
    "vue",
    "web components",
    "typescript",
    "javascript",
    "starter kit"
  ],
  "homepage": "https://github.com/openwebstacks/stacks-starter#readme",
  "bugs": {
    "url": "https://github.com/openwebstacks/stacks-starter/issues"
  },
  "license": "MIT",
  "author": "Chris Breuer <chris@ow3.org>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/openwebstacks/stacks-starter.git"
  },
  "contributors": [
    "Chris Breuer <chris@ow3.org>"
  ],
  "main": "./dist/hello-world.umd.js",
  "module": "./dist/hello-world.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/hello-world.umd.js",
      "import": "./dist/hello-world.es.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf packages/*/dist && pnpm -r --filter packages/* run build",
    "dev": "pnpm run stub",
    "deploy": "pnpm run stub && npm -C playground run build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "play": "npm -C playground run dev",
    "commit": "git-cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "coverage": "vitest run --coverage",
    "test": "pnpm run test:unit && pnpm run test:e2e",
    "test:e2e": "cypress open",
    "test:unit": "vitest",
    "typecheck": "vue-tsc --noEmit",
    "release": "npx bumpp packages/*/package.json --execute 'pnpm run changelog' --commit 'chore(release): %s' --tag --push --all",
    "preinstall": "esno ./.scripts/check-for-pnpm.ts && esno .scripts/check-node-version.ts",
    "size": "esno ./.scripts/size.ts",
    "stub": "pnpm -r --parallel run stub"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npx commitlint --config ./commitlint.config.ts --edit $1"
  },
  "dependencies": {
    "vue": "^3.2.36"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.24.2",
    "@babel/types": "^7.18.2",
    "@commitlint/cli": "^17.0.1",
    "@commitlint/config-conventional": "^17.0.0",
    "@commitlint/cz-commitlint": "^17.0.0",
    "@commitlint/types": "^17.0.0",
    "@iconify-json/heroicons-outline": "^1.1.1",
    "@iconify-json/heroicons-solid": "^1.1.1",
    "@types/node": "^17.0.31",
    "@unocss/preset-icons": "^0.34.1",
    "@vitejs/plugin-vue": "^2.3.3",
    "@vue/compiler-sfc": "^3.2.36",
    "@vueuse/core": "^8.5.0",
    "brotli-size": "^4.0.0",
    "bumpp": "^7.1.1",
    "commitizen": "^4.2.4",
    "conventional-changelog-cli": "^2.2.2",
    "cypress": "^9.7.0",
    "eslint": "^8.16.0",
    "eslint-plugin-cypress": "^2.12.1",
    "esno": "^0.16.3",
    "fast-glob": "^3.2.11",
    "gzip-size": "^7.0.0",
    "inquirer": "^8.2.4",
    "lint-staged": "^12.4.2",
    "minimist": "^1.2.6",
    "prompts": "^2.4.2",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.7.0",
    "sort-package-json": "^1.57.0",
    "terser": "^5.13.1",
    "typescript": "^4.7.2",
    "unbuild": "^0.7.4",
    "unocss": "^0.34.1",
    "unplugin-auto-import": "^0.8.5",
    "unplugin-vue-components": "^0.19.5",
    "upath": "^2.0.1",
    "vite": "^2.9.9",
    "vitest": "^0.12.9",
    "vue-tsc": "^0.34.16"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": "eslint --fix",
    "package.json": "sort-package-json"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "pnpm": {
    "overrides": {
      "vite": "2.9.9"
    }
  },
  "engines": {
    "node": ">=v16.15.0",
    "pnpm": ">=7.1.5"
  }
}